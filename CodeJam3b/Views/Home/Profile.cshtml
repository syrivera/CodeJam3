@{
    ViewData["Title"] = "User Profile";
    var watched = ViewData["Watched"] as List<string>;
    var favorites = ViewData["Favs"] as List<string>;
    var watchlist = ViewData["Watchlist"] as List<string>;
}
<!-- this page could use more styling -->
<h2>Welcome, @ViewData["Username"]!</h2>

<div>
    <h3>Watched Movies</h3>
    @if (watched != null && watched.Count > 0)
    {
        <ul>
            @foreach (var movie in watched)
            {
                <li>@movie</li>
            }
        </ul>
    }
    else
    {
        <p>No watched movies yet.</p>
    }

    <h3>Favorite Movies</h3>
    @if (favorites != null && favorites.Count > 0)
    {
        <ul>
            @foreach (var movie in favorites)
            {
                <li>@movie</li>
            }
        </ul>
    }
    else
    {
        <p>No favorites yet.</p>
    }

